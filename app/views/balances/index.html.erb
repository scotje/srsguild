<% title h("#{@_GUILD.name} Balances") %>
<div id="BalancesIndex">

	<h1 class="GuildTitle"><%= @_GUILD.name %>: Balances</h1>

	<div class="SectionHeading">
		<h2>Your Balances</h2>
	</div>
	<table class="simple">
		<tr>
			<th>Account Name</th>
			<th style="width: 160px;">Your Balance</th>
			<th style="width: 200px;"></th>
		</tr>

		<% @balance_accounts.each do |a| %>
			<tr>
				<td><%=h a.name %></td>
				<td><%= number_with_precision(a.balance || 0, :precision => 2) %></td>
				<td style="text-align: right;">
					<%= link_to 'view detail', balance_url(a) %>
				</td>
			</tr>
		<% end %>
	</table>
</div>